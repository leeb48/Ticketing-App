@model TicketingApp.Models.ArtistListPage;

<ul class="list-group">
    @foreach (var artist in Model.Artists)
    {
        <li class="list-group-item">@Html.DisplayFor(model => artist.Name)</li>
    }
</ul>

<hr />

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (Model.CurrentPage > 0)
        {
            <li class="page-item">
                <button class="page-link"
                    hx-post="artist/pagination?searchInput=@(Model.SearchInput)&offset=@((Model.CurrentPage - 1) * Model.PageSize)&pageCount=@(Model.PageCount)&pageSize=@(Model.PageSize)&currentPage=@(Model.CurrentPage - 1)"
                    hx-target="#artist_search_result">
                    Previous
                </button>
            </li>
        }

        @for (var page = 0; page < Model.PageCount; ++page)
        {
            <li class="page-item">
                <button class="page-link"
                    hx-post="artist/pagination?searchInput=@(Model.SearchInput)&offset=@(page * Model.PageSize)&pageCount=@(Model.PageCount)&pageSize=@(Model.PageSize)&currentPage=@(page)"
                    hx-target="#artist_search_result">
                    @(page + 1)
                </button>
            </li>
        }

        @if (Model.CurrentPage < Model.PageCount - 1)
        {
            <li class="page-item">
                <button class="page-link"
                    hx-post="artist/pagination?searchInput=@(Model.SearchInput)&offset=@((Model.CurrentPage + 1) * Model.PageSize)&pageCount=@(Model.PageCount)&pageSize=@(Model.PageSize)&currentPage=@(Model.CurrentPage + 1)"
                    hx-target="#artist_search_result">
                    Next
                </button>
            </li>
        }
    </ul>
</nav>