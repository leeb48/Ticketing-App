@model TicketingApp.Models.Artist;

@{
    ViewData["Title"] = "Create Artist";
}

<h1>Create Artist</h1>

<form hx-post="/artist/create" hx-target-error="#errorMessage">

    <div class="mb-3">
        <label for="artistName" class="form-label">Artist Name</label>
        <input type="text" class="form-control" id="artistName" name="Name">
    </div>
    <div class="mb-3">
        <label for="artistBio" class="form-label">Bio</label>
        <input type="text" class="form-control" id="artistBio" name="Description" aria-describedby="artistBioHelp">
        <div id="artistBioHelp" class="form-text">Please add description about the artist.</div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>