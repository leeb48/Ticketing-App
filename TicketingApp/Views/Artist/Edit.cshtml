@model TicketingApp.Models.Artist;

@{
    ViewData["Title"] = "Edit Artist";
}

<h1>Edit Artist</h1>

<form action="/artist/edit" method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" name="Id" value="@(Model.Id)">
    <div class="mb-3">
        <label for="artistName" class="form-label">Artist Name</label>
        <input type="text" class="form-control" id="artistName" name="Name" value="@(Model.Name)">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="artistBio" class="form-label">Bio</label>
        <input type="text" class="form-control" id="artistBio" name="Description" aria-describedby="artistBioHelp"
            value="@(Model.Description)">
        <div id="artistBioHelp" class="form-text">Please add description about the artist.</div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>