@model TicketingApp.Services.PaginationService.PaginationModel<Event>;

<ul class="list-group">
    @foreach (var entity in Model.Entities)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="ms-2 me-auto">
                <div class="fw-bold">
                    @Html.DisplayFor(model => entity.Name)
                </div>
                @Html.DisplayFor(model => entity.Description)
            </div>
            <a class="btn btn-success" href="/event/edit/@(entity.Id)">Edit</a>
        </li>
    }
</ul>

<hr />

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (Model.CurrentPage > 0)
        {
            <li class="page-item">
                <button class="page-link"
                    hx-post="event/pagination?searchInput=@(Model.SearchInput)&offset=@((Model.CurrentPage - 1) * Model.PageSize)&pageCount=@(Model.PageCount)&pageSize=@(Model.PageSize)&currentPage=@(Model.CurrentPage - 1)"
                    hx-target="#event_search_result">
                    Previous
                </button>
            </li>
        }

        @for (var page = 0; page < Model.PageCount; ++page)
        {
            <li class="page-item">
                <button class="page-link"
                    hx-post="event/pagination?searchInput=@(Model.SearchInput)&offset=@(page * Model.PageSize)&pageCount=@(Model.PageCount)&pageSize=@(Model.PageSize)&currentPage=@(page)"
                    hx-target="#event_search_result">
                    @(page + 1)
                </button>
            </li>
        }

        @if (Model.CurrentPage < Model.PageCount - 1)
        {
            <li class="page-item">
                <button class="page-link"
                    hx-post="event/pagination?searchInput=@(Model.SearchInput)&offset=@((Model.CurrentPage + 1) * Model.PageSize)&pageCount=@(Model.PageCount)&pageSize=@(Model.PageSize)&currentPage=@(Model.CurrentPage + 1)"
                    hx-target="#event_search_result">
                    Next
                </button>
            </li>
        }
    </ul>
</nav>